{
    "name": "aixcoder",
    "displayName": "aiXcoder",
    "description": "aiXcoder code suggestion",
    "version": "0.1.2",
    "publisher": "nnthink",
    "repository": {
        "url": "https://github.com/felixhao28/vscode-plugin"
    },
    "engines": {
        "vscode": "^1.18.0"
    },
    "icon": "images/icon.png",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:python",
        "onLanguage:java",
        "onLanguage:c",
        "onLanguage:cpp"
    ],
    "main": "./dist/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "AiXcoder",
            "properties": {
                "aiXcoder.endpoint": {
                    "type": "string",
                    "default": "https://api.aixcoder.com/",
                    "description": "Specifies the endpoint for code suggestion server."
                },
                "aiXcoder.enableTelemetry": {
                    "type": "boolean",
                    "default": true,
                    "description": "Send anonoymous usage data and errors to aiXcoder telemetry service."
                },
                "aiXcoder.additionalParameters": {
                    "type": "string",
                    "default": "",
                    "description": "(Only for advanced usages) URL encoded params."
                },
                "aiXcoder.alwaysTrigger": {
                    "type": "boolean",
                    "default": true,
                    "description": "If set to true, aiXcoder suggestions are always triggered as you type. Otherwise, it only triggers explictly with e.g. `Ctrl+Space`."
                }
            }
        },
        "javaExtensions": [
            "dist/aixjdtls.jar"
        ]
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "compile": "webpack --mode none",
        "watch": "webpack --mode none --watch",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^5.2.6",
        "@types/node": "^12.0.0",
        "@types/request-promise": "^4.1.43",
        "@types/uuid": "^3.4.4",
        "eslint": "^5.16.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.17.2",
        "eslint-plugin-node": "^9.0.1",
        "eslint-plugin-promise": "^4.1.1",
        "eslint-plugin-standard": "^4.0.0",
        "mocha": "^6.1.4",
        "ts-loader": "^5.4.6",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5",
        "vscode": "^1.1.33",
        "webpack": "^4.30.0",
        "webpack-cli": "^3.3.2"
    },
    "dependencies": {
        "agentkeepalive": "^4.0.2",
        "portfinder": "^1.0.20",
        "request": "^2.88.0",
        "request-promise": "^4.2.4",
        "uuid": "^3.3.2"
    }
}
